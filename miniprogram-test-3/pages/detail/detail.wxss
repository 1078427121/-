/* pages/detail/detail.wxss */
page{
  background-color: #efefef;
}
.book_info{
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.comment_list{
  margin-top: 16rpx;
  background-color: #fff;
}
.flex-wrp{
  display: flex;
}
.nav{
  width:15%;
  color: #494949;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search{  
  width: 85%;  
  padding-top: 30rpx;
  margin-left: 20rpx;
}  
.search_arr {  
  /*border: 0.5px solid #d0d0d0;  */
  border-radius: 10rpx;  
  /*margin-left: 20rpx;*/ 
  background-color: #efefef;
}  
.search_arr input{  
  margin-left: 30rpx;  
  height: 60rpx;  
  border-radius: 10rpx; 
  background-color: #efefef;
  color: #898989;
  font-size: 35rpx;
}  
.sousuo {  
  margin-left: 15rpx;  
  margin-right: 20rpx;
  width: 10%;  
  line-height: 150%;  
  text-align: center;  
  /*border: 0.5px solid #d0d0d0;  */
  border-radius: 10rpx;  
  height: 60rpx;  
  margin-top: 30rpx;
  /*color:#494949;
  background-color: #fff;*/
  font-size:37rpx;
  color: #494949;
}  
.page_row{ 
  display: flex;  
  flex-direction: row;
  background-color: #fff;
  border-top: 1rpx solid #cccccc;
  position:fixed;
  bottom:0%;
  padding-bottom: 30rpx;
  width: 100%;
}  

.flex-wrp{
  display: flex;
}
.flex-box{
	display: flex;
}
.list{
	border-bottom: 1rpx solid #e5e5e5;
	padding: 30rpx;
}
.flex-btn{
	flex: 1;
}
.list-main{
	position: relative;
}
.name{
  color: #494949;
}
.item_left{
  flex: 1; /* 重要 */
  align-items:center;
}
.item_right{
  flex: 0.1;
  position: relative;
  align-items:center;
}


.info_content{
  color: #494949;
  font-size: 35rpx;
  width: 80%;
  line-height: 50rpx;
}
.time_detail{
  font-size:30rpx;
  color:#8a8a8a;
}
.comment_content_detail{
  color: #494949;
  font-size: 35rpx;
  padding-top: 10rpx;
  
  text-overflow:ellipsis;
  word-wrap:break-word;
  word-break:break-all;
}
.tag{
  color: #529dff;
  font-size: 35rpx;
  width: 80%;
}


.item{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  height: 70rpx;
  align-items: center;
}
.item_adjust{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  /*height: 25px;*/
  align-items: center;
  min-height: 70rpx;
}
.item_title{
  width:20%;
  color: #494949;
  font-size: 35rpx;
  padding-left: 20rpx;
  /*
  display:flex;
  flex-direction:column;
  lign-items: center;*/
}
.item_content{
  color: #898989;
  font-size: 35rpx;
}
.line{
  height: 1px;
  background-color: #cccccc;
  opacity: 0.2;
}
.comment_title{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  height: 50rpx;
  align-items: center;
  font-size: 30rpx;
  color: #898989;
  padding-left: 30rpx;
}

button{
  background-color: rgba(255,255,255,0);
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  display: inline-block;
  line-height: 1;
}
button::after{ /*button的边框样式是通过::after方式实现的*/
border:none;
}
.button-hover{ /*点击后样式*/
color:#000;
background-color: rgba(255,255,255,0);
}
.no{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #898989;
  padding-top:30rpx;
  z-index:9997;
  background-color: #efefef;
}
