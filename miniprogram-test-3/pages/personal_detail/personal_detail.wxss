/* pages/personal_detail/personal_detail.wxss */
.personal_view{
  background-color: #efefef;
}
.user_info_general{
  height: 140rpx;
  background-color: #494949;
  display:flex;
  flex-direction:row;
  align-items: center;
}
.img{
  margin-left: 20rpx;
}
.account{
  width:70%;
  color: #ffffff;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 37rpx;
}
.item{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  height: 100rpx;
  align-items: center;
}
.item_title{
  width:40%;
  color: #494949;
  font-size: 35rpx;
  font-weight: bold;
  display:flex;
  flex-direction:column;
  align-items: center;
}
.item_content{
  color: #898989;
  font-size: 35rpx;
}
.line{
  height: 1px;
  background-color: #cccccc;
  opacity: 0.2;
}
.reset{
  width: 240rpx;
  color: #ffffff;
  font-size: 30rpx;
  margin-top: 6rpx;
  display:flex;
  flex-direction:column;
  align-items: center;
}
.comment{
  display:flex;
  flex-direction:column;
  align-items: center;
  padding-top: 20rpx;
  color: #b6b6b6;
  font-size: 30rpx;
}
.tishi{
  color:#ff0000;
  display:flex;
  flex-direction:column;
  align-items: center;
  padding-top: 20rpx;
  font-size: 24rpx;
}