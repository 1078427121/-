.page_row{  
  display: flex;  
  flex-direction: row;
  background-color: #fff;
  border-top: 1rpx solid #cccccc;
  position:fixed;
  bottom:0%;
  padding-bottom: 30rpx;
  width: 100%;
}  


.flex-wrp{
  display: flex;
}
.flex-box{
	display: flex;
}
.list{
	border-bottom: 1rpx solid #e5e5e5;
	padding: 30rpx;
}
.flex-btn{
	flex: 1;
}
.list-main{
	position: relative;
}

.item_left{
  flex: 1; /* 重要 */
  align-items:center;
}
.item_right{
  flex: 0.1;
  position: relative;
  align-items:center;
}
.bname{
  color: #494949;
}
.content{
  color: #494949;
  font-size: 35rpx;
  text-overflow:ellipsis;
  word-wrap:break-word;
}
.item{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  height: 50rpx;
  align-items: center;
  width: 100%;
}

.item_title{
  width:20%;
  color: #494949;
