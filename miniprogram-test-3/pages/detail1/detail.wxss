  color: #898989;
  font-size: 35rpx;
}
.info_content{
  color: #494949;
  font-size: 35rpx;
}

.comment_content_detail1{
  color: #494949;
  font-size: 35rpx;
  padding-top: 10rpx;
  
  text-overflow:ellipsis;
  word-wrap:break-word;
  word-break:break-all;
}
.line_review{
  height: 1px;
  background-color: #cccccc;
  opacity: 0.2;
}
.comment_title{
  background-color: #ffffff;
  display:flex;
  flex-direction:row;
  height: 50rpx;
  align-items: center;
  font-size: 30rpx;
  color: #898989;
  padding-left: 15px;
}

button{
  background-color: rgba(255,255,255,0);
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  display: inline-block;
  line-height: 1;
}
button::after{ /*button的边框样式是通过::after方式实现的*/
border:none;
}
.button-hover{ /*点击后样式*/
color:#000;
background-color: rgba(255,255,255,0);
}

.no{
  display: flex;
  align-items: center;
